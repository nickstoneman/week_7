<!DOCTYPE html>
<html>
<head>
  <title>WalkingTour</title>
  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag  'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css' %>
  <link rel="stylesheet" type="text/css" href="stylesheets/custom.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js' %>
  <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js' %>
  <%= csrf_meta_tags %>
  
</head>
  <body>

  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to('City Walks', root_path, class: 'navbar-brand text-muted') %>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to('Tours', tours_path) %></li>
          <li><%= link_to('Users', users_path) %></li>
          <li><%= link_to('Categories', categories_path) %></li>
        </ul>
      </div>
    </div>
  </div>

  <% flash.each do |name, msg| %>
    <div class="flash-message flash-message-<%= name %>">
      <%= msg %>
    </div>
  <% end %>
 
  <%= yield %>
  
  <div class="container">
      <div>
        <p>&copy; 2015 City Walks - By WDI Productions Inc.</p>
      </div>
    </div>
  </body>
</html>
